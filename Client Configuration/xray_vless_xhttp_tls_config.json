//一、直连或 CDN 流量中转独立配置
{
  "log": {},
  "inbounds": [
    {
      "port": "1080",
      "protocol": "socks",
      "settings": {
        "udp": true
      }
    },
    {
      "port": "1081",
      "protocol": "http",
      "settings": {}
    }
  ],
  "routing": {
    "domainStrategy": "IPIfNonMatch",
    "rules": [
      {
        "type": "field",
        "domain": ["geosite:cn"], //中国大陆主流网站的域名
        "outboundTag": "direct" //与下 outbounds 中 tag 对应
      },
      {
        "type": "field",
        "ip": [
          "geoip:cn", //中国大陆的 IP
          "geoip:private" //私有地址 IP，如路由器等。
        ],
        "outboundTag": "direct" //与下 outbounds 中 tag 对应
      }
    ]
  },
  "outbounds": [
    {
      "protocol": "vless",
      "settings": {
        "vnext": [
          {
            "address": "2.2.2.2", //修改为使用本应用的域名或自己服务端的 IP
            "port": 443,
            "users": [
              {
                "id": "af7d5cf8-442d-4bb3-8a76-eb367178781d", //修改为服务端配置的 UUID
                "encryption": "none"
              }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "xhttp",
        "security": "tls",
        "tlsSettings": {
          "serverName": "xx.yy", //修改为使用本应用的域名。（address 使用 IP 后必须配置，否则可删除。）
          "alpn": ["h2"], //若服务端（含使用 CDN 流量中转的服务器）支持 HTTP/3 传输其值可改为 h3
          "fingerprint": "chrome" //模拟 TLS 指纹，可任一 chrome、firefox、safari、ios、edge、qq、random、randomized 选项配置。
        },
        "xhttpSettings": {
          "mode": "auto", //上行所使用的模式，默认自动。可根据实际情况选用其它模式，解决连通及优化问题。
          "path": "/VLSpdG9k" //修改为服务端配置的路径
        }
      }
    },
    {
      "tag": "direct",
      "protocol": "freedom",
      "settings": {}
    }
  ]
}

//二、CDN 流量中转上行/直连下行的分离配置
{
  "log": {},
  "inbounds": [
    {
      "port": "1080",
      "protocol": "socks",
      "settings": {
        "udp": true
      }
    },
    {
      "port": "1081",
      "protocol": "http",
      "settings": {}
    }
  ],
  "routing": {
    "domainStrategy": "IPIfNonMatch",
    "rules": [
      {
        "type": "field",
        "domain": ["geosite:cn"], //中国大陆主流网站的域名
        "outboundTag": "direct" //与下 outbounds 中 tag 对应
      },
      {
        "type": "field",
        "ip": [
          "geoip:cn", //中国大陆的 IP
          "geoip:private" //私有地址 IP，如路由器等。
        ],
        "outboundTag": "direct" //与下 outbounds 中 tag 对应
      }
    ]
  },
  "outbounds": [
    {
      "protocol": "vless",
      "settings": {
        "vnext": [
          {
            "address": "2.2.2.2", //修改为使用本应用的 CDN 流量中转域名或自己服务端的 IP
            "port": 443,
            "users": [
              {
                "id": "af7d5cf8-442d-4bb3-8a76-eb367178781d", //修改为服务端配置的 UUID
                "encryption": "none"
              }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "xhttp",
        "security": "tls",
        "tlsSettings": {
          "serverName": "zh.xx.yy", //修改为使用本应用的 CDN 流量中转域名。（对应 address 使用 IP 后必须配置，否则可删除。）
          "alpn": ["h2"], //若 CDN 流量中转服务器支持 HTTP/3 传输其值可改为 h3
          "fingerprint": "chrome" //模拟 TLS 指纹，可任一 chrome、firefox、safari、ios、edge、qq、random、randomized 选项配置。
        },
        "xhttpSettings": {
          "mode": "auto", //上行所使用的模式，默认自动。可根据实际情况选用其它模式，解决连通及优化问题。
          "path": "/VLSpdG9k", //修改为服务端配置的路径
          "downloadSettings": {
            "address": "2.2.2.2", //修改为使用本应用的直连域名或自己服务端的 IP
            "port": 443,
            "network": "xhttp",
            "security": "tls",
            "tlsSettings": {
              "serverName": "h3.xx.yy", //修改为使用本应用的直连域名。（对应 address 使用 IP 后必须配置，否则可删除。）
              "alpn": ["h2"], //若服务端（非 CDN 流量中转服务器）支持 HTTP/3 传输其值可改为 h3
              "fingerprint": "chrome" //模拟 TLS 指纹，可任一 chrome、firefox、safari、ios、edge、qq、random、randomized 选项配置。
            },
            "xhttpSettings": {
              "path": "/VLSpdG9k" //必须与上路径一致
            }
          }
        }
      }
    },
    {
      "tag": "direct",
      "protocol": "freedom",
      "settings": {}
    }
  ]
}
//备注：
//1、本配置实际为使用两个不同 IP 来实现的上下行分离应用，上下行可根据实际情况对调。
//2、若服务端支持双 IP（IPv4/IPv6），可用双 IP 来实现上下行分离应用。
